<%
    var repeatCount = 10;
    var reverse = reverse || false;

    var src = title.toLowerCase() + '.svg';
    var alt = title + ' logo';

    var blocks = [];

    for (let i = 0; i < 2; i++) {
        const odd = i % 2 !== 0;

        blocks.push(`
            <div class="my-works__item__ticker__group">
                <div class="my-works__item__ticker__title text stroke-hover-ch__black">
                    <span>${title}</span>
                </div>
                <div class="my-works__item__ticker__icon ${odd ? 'my-works__item__ticker__icon__2' : ''}">
                    <img src="./src/assets/images/my-works/${src}" alt="${alt}" />
                </div>
            </div>
        `);
    }

    var tickerBody = [];

    for (let i = 0; i < repeatCount; i++)
        tickerBody.push(blocks);

    tickerBody = tickerBody.flat(Infinity).join('');
%>

<div class="my-works__item my-works__<%= title.toLowerCase().split(' ').join('-') %>">
    <div class="my-works__item__container stroke-hover">
        <div class="my-works__item__ticker <%= reverse ? 'reverse' : '' %>">
            <div class="my-works__item__ticker__element my-works__item__ticker__main">
                <%- tickerBody %>
                <a href="<%= href %>" target="_blank" rel="noopener" aria-label="<%= title %>"></a>
            </div>
            <div class="my-works__item__ticker__element my-works__item__ticker__ghost">
                <%- tickerBody %>
                <a href="<%= href %>" target="_blank" rel="noopener" aria-label="<%= title %>"></a>
            </div>
        </div>
    </div>
</div>
